import requests # type: ignore

# URL da API
URL = "https://randomuser.me/api/"

def gerar_usuario():
    """
    Faz uma requisi칞칚o  API Random User Generator para obter um perfil de usu치rio aleat칩rio.
    
    Retorno:
    Nome, e-mail e pa칤s do usu치rio gerado.
    """
    try:
        resposta = requests.get(URL)
        resposta.raise_for_status()  # Verifica se a requisi칞칚o foi bem-sucedida

        dados = resposta.json()
        usuario = dados.get("results", [{}])[0]  # Obt칠m os dados do primeiro usu치rio gerado

        nome = f'{usuario.get("name", {}).get("first", "N/A")} {usuario.get("name", {}).get("last", "N/A")}'
        email = usuario.get("email", "N/A")
        pais = usuario.get("location", {}).get("country", "N/A")

        print("\nPerfil gerado:")
        print(f"游늷 Nome: {nome}")
        print(f"游늷 E-mail: {email}")
        print(f"游늷 Pa칤s: {pais}")

    except requests.exceptions.RequestException as e:
        print(f"Erro ao obter os dados da API: {e}")

# Executa a fun칞칚o

gerar_usuario()


